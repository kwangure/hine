{
	"name": "hine.dev",
	"version": "0.0.4",
	"private": true,
	"scripts": {
		"build": "wireit",
		"check": "wireit",
		"dev": "vite dev",
		"preview": "wireit",
		"test": "wireit"
	},
	"wireit": {
		"build": {
			"command": "vite build",
			"dependencies": [
				"../../packages/hine:build"
			],
			"files": [
				"src/**/*.{js,ts,svelte}",
				"static/**",
				"svelte.config.js",
				"vite.config.js"
			],
			"output": [
				"build/**"
			]
		},
		"check": {
			"command": "svelte-check --tsconfig ./tsconfig.json",
			"dependencies": [
				"sync",
				"../../packages/hine:build"
			],
			"files": [
				"src/**/*.{js,ts,svelte}",
				"tsconfig.json"
			],
			"output": []
		},
		"pre-commit": {
			"dependencies": [
				"check"
			]
		},
		"preview": {
			"command": "vite preview",
			"dependencies": [
				"build"
			],
			"files": [],
			"output": []
		},
		"sync": {
			"command": "svelte-kit sync",
			"files": [
				"src/**/*.{js,ts,svelte}",
				"tsconfig.json"
			],
			"output": []
		},
		"test": {
			"command": "vitest run",
			"dependencies": [
				"sync"
			],
			"files": [
				"src/**/*.{js,svelte,ts}",
				"tests/**/*.{js,svelte,ts}"
			],
			"output": []
		}
	},
	"dependencies": {
		"@content-thing/memdb": "^0.0.6",
		"@fontsource/geist-sans": "^5.0.3",
		"@hine/assets": "workspace:*",
		"@mdi/js": "^7.4.47",
		"@melt-ui/svelte": "^0.83.0",
		"@svelte-thing/builders": "^0.0.1",
		"@svelte-thing/components": "^0.0.29",
		"hine": "workspace:*",
		"jsdom": "^24.1.1",
		"simple-icons": "^12.0.0",
		"uid": "^2.0.2"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.2.0",
		"@sveltejs/adapter-vercel": "^5.4.4",
		"@sveltejs/kit": "^2.5.28",
		"@sveltejs/vite-plugin-svelte": "4.0.0-next.6",
		"content-thing": "^0.0.39",
		"svelte": "^5.0.0-next.256",
		"svelte-check": "^3.8.0",
		"tslib": "^2.4.1",
		"typescript": "^5.4.5",
		"vite": "^5.3.4",
		"vitest": "^1.6.0"
	},
	"optionalDependencies": {
		"@rollup/rollup-linux-x64-gnu": "4.22.1"
	},
	"type": "module"
}
