{
	"name": "hine.dev",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "wireit",
		"check": "wireit",
		"dev": "wireit",
		"preview": "wireit",
		"test": "wireit"
	},
	"wireit": {
		"build": {
			"command": "vite build",
			"dependencies": [
				"../../packages/hine:build"
			],
			"files": [
				"src/**/*.{js,ts,svelte}",
				"static/**",
				"svelte.config.js",
				"vite.config.js"
			],
			"output": [
				"build/**"
			]
		},
		"check": {
			"command": "svelte-check --tsconfig ./tsconfig.json",
			"dependencies": [
				"sync",
				"../../packages/hine:build"
			],
			"files": [
				"src/**/*.{js,ts,svelte}",
				"tsconfig.json"
			],
			"output": []
		},
		"dev": {
			"command": "vite dev",
			"files": [],
			"dependencies": [
				"../../packages/hine:dev"
			]
		},
		"pre-commit": {
			"dependencies": [
				"check",
				"test"
			]
		},
		"preview": {
			"command": "vite preview",
			"dependencies": [
				"build"
			],
			"files": [],
			"output": []
		},
		"sync": {
			"command": "svelte-kit sync",
			"files": [
				"src/**/*.{js,ts,svelte}",
				"tsconfig.json"
			],
			"output": []
		},
		"test": {
			"command": "vitest run",
			"dependencies": [
				"sync"
			],
			"files": [
				"src/**/*.{js,ts}",
				"tests/**/*.{js,ts}"
			],
			"output": []
		}
	},
	"dependencies": {
		"@melt-ui/svelte": "^0.79.1",
		"@svelte-thing/components": "^0.0.20",
		"hine": "workspace:*",
		"simple-icons": "^11.14.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.2.0",
		"@sveltejs/kit": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^3.1.0",
		"content-thing": "^0.0.21",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.4.5",
		"vite": "^5.2.11",
		"vitest": "^1.6.0"
	},
	"type": "module"
}
